<% include ../partials/header %>

<div class="container">
  <div class="row">
    
    <h1 class="text-center jumbotron"> Add comment to <%= camp.name %></h1>
    
    <div style="width: 30%; margin: 0 auto">
      
      <form action="/camps/<%= camp._id %>/comments" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="comment[author]" placeholder="author">
        </div>
        
        <div class="form-group">
          <button class="btn  btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a class="btn btn-info" href="/camps">Go Back</a>
    </div>
    
  </div>  
</div>

<% include ../partials/footer %>
