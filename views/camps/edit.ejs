<% include ../partials/header %>

<section>
	<h1 class="text-center page-header">
		Edit: 
		<small class="text-muted"><%= foundCamp.name %></small>
	</h1> 
	
	<div style="width: 80%; margin: 0 auto">
				<form action="/camps/<%= foundCamp._id %>?_method=PUT" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="camp[name]" value="<%=foundCamp.name %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="number" name="camp[price]" value="<%= foundCamp.price%>" min="0" step="1">
					</div>					
					<div class="form-group"><!--name=camp[name] for better method-->
						<input class="form-control" type="text" name="camp[image]" value="<%=foundCamp.image %>">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="camp[description]" value="<%=foundCamp.description %>">
					</div>
					<div class="form-group text-center">
						<button class="btn  btn-primary col-5">Submit</button>
						<a class="btn back-btn btn-info col-5" href="/camps">Go Back</a>
					</div>
				</form>			
	</div>
</section>

<% include ../partials/footer %>